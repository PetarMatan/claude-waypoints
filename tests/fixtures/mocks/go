#!/bin/bash
# Mock go command for testing

TEST_TMP="${TEST_TMP:-/tmp}"

case "$1" in
    "build")
        exit_code=$(cat "$TEST_TMP/mock_compile_exit_code" 2>/dev/null || echo "0")
        output=$(cat "$TEST_TMP/mock_compile_output" 2>/dev/null || echo "")
        echo "$output"
        exit "$exit_code"
        ;;
    "test")
        if [[ "$2" == "-c" ]]; then
            # go test -c (compile only)
            exit_code=$(cat "$TEST_TMP/mock_compile_exit_code" 2>/dev/null || echo "0")
            output=$(cat "$TEST_TMP/mock_compile_output" 2>/dev/null || echo "")
            echo "$output"
            exit "$exit_code"
        else
            exit_code=$(cat "$TEST_TMP/mock_test_exit_code" 2>/dev/null || echo "0")
            output=$(cat "$TEST_TMP/mock_test_output" 2>/dev/null || echo "ok")
            echo "$output"
            exit "$exit_code"
        fi
        ;;
esac

echo "Mock go: $*"
exit 0
